<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs')%>
        <link rel="stylesheet" href="/stylesheets/navbar.css">
        <link rel="stylesheet" href="/stylesheets/perfil-usuario.css">
        <title>Perfil de usuario</title>
    </head>
<body>
    <%- include('../partials/header.ejs')%>
    <main>
        <section class="usuario">
            <a class= "logout" href="/usuarios/logout">Log Out <i class="fas fa-power-off"></i></a>
            <div class="foto_usuario">
                <img src="/images/users/<%= user.imagen %>" alt="Foto de perfil">
            </div>
            <h3 class="nombre_completo"><%= user.nombre %> <%= user.apellido %></h3>
            <% if(locals.user && locals.user.role == 'admin') { %> 
                <div class="boton_usuario">
                    <a href="/productos/crear"><button>Crear Producto</button></a>
                </div>
            <% } %>
            <% if(locals.user && locals.user.role != 'admin') { %> 
            <div class="boton_usuario">
                <a href=""><button>Mi Perfil <i class="far fa-user-circle"></i></button></a>
            </div>
            <div class="boton_usuario">
                <a href=""><button>Compras <i class="fas fa-shopping-bag"></i></button></a>
            </div>
            <div class="boton_usuario">
                <a href=""><button>Favoritos <i class="fas fa-heart"></i></button></a>
            </div>
            <div class="boton_usuario">
                <a href=""><button>Tarjetas <i class="fas fa-credit-card"></i></button></a>
            </div>
            <div class="boton_usuario">
                <a href=""><button>Direcciones <i class="fas fa-map-marker-alt"></i></button></a>
            </div>
            <div class="boton_usuario">
                <a href=""><button>Comentarios <i class="far fa-comments"></i></button></a>
            </div>
            <% } %>
            <div class="boton_usuario">
                <a href=""><button>Ajustes <i class="fas fa-cogs"></i></button></a>
            </div>
            <br>
            <br>
        </section>
    <%- include('../partials/footer.ejs')%>
    </main>
</body>
</html>