<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs')%>
        <link rel="stylesheet" href="/stylesheets/navbar.css">
        <link rel="stylesheet" href="/stylesheets/formulario-registro.css">
        <title>Agregar una Direccion</title>
    </head>
    <body>
        <%- include('../partials/header.ejs')%>
        <main>
            <section class="titulo">
                <h2>Agregar una Direccion</h2>
            </section>

            <section align="center" class="formulario">
                <form method="POST" action="/usuarios/register">
                    <div>

                        <label for="">Provincia</label>
                        <%- include('../partials/provinciasSelect.ejs')%>

                        <label for="">Ciudad</label>
                        <input type="text" name="city" id="city" placeholder="Ciudad">

                        <label for="">Codigo Postal</label>
                        <input type="number" name="zip_code" id="zip_code" placeholder="Codigo Postal">

                        <label for="">Calle</label>
                        <input type="text" name="street" id="street" placeholder="Calle">

                        <label for="">Altura</label>
                        <input type="number" name="number" id="number" placeholder="Altura">

                        <label for="">Piso (Opcional)</label>
                        <input type="text" name="flat" id="flat" placeholder="Piso (Opcional)">

                        <label for="">Departamento (Opcional)</label>
                        <input type="text" name="apartment" id="apartment" placeholder="Departamento (Opcional)">

                    </div>
                    
                    <button class="crear-cuenta" type="submit">Agregar Direccion</button>
                </form>
            </section>

            <%- include('../partials/footer.ejs')%>
        </main>
    </body>
</html>>