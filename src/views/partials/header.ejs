<header class="navbar">

    <div class="navbar-superior">

        <div class="navbar-logo"><a href="/">Mí Café</div></a>

        <div class="search">
            <form class="search" action="/productos/resultadoBusqueda" method="GET">
                <input type="text" name="search" class="searchTerm" placeholder="Busca tu Producto">
                <button type="submit" class="searchButton">
                    <i class="fa fa-search"></i>
                </button>
            </form>
        </div>

           <div class="navbar-burger"><i class="fas fa-bars"></i></div>

           <div class="navbar-cart"><a href="/carrito/lleno"><i class="fas fa-shopping-cart"></i></div></a>
           
    </div>

    <div class="navbar-inferior">
        
        <% if(locals.user) { %>
            <div class="navbar-location"><i class="fas fa-map-marker-alt"></i><h4> <%= user.nombre %> - <%= user.direccion %></h4></div>
        <% } else {%>
        <div class="navbar-location"><i class="fas fa-map-marker-alt"></i><h4> Envíos gratis a tu domicilio </h4></div>
        <% } %>

        <% if(locals.user) { %>
            <div class="navbar-location-desktop"><i class="fas fa-map-marker-alt"></i><h4>Enviar a: <br><%= user.direccion %></h4></div>
        <% } else {%>
            <div class="navbar-location-desktop"><i class="fas fa-map-marker-alt"></i><h4> Envíos gratis <br> a tu domicilio </h4></div>
        <% } %>

        <div class="navbar-categorias">
            <a href="/productos/listado/cafes">Cafés</a><span> - </span>
            <a href="/productos/listado/cafeteras">Cafeteras</a><span> - </span>
            <a href="/productos/listado/accesorios">Accesorios</a>
        </div>

        <div class="navbar-usuario">
            <% if(locals.user) { %>
            <a href="/usuarios/perfil"><i class="far fa-user-circle"></i> <%= user.nombre %> <%= user.apellido %> </a>
            <% } else {%>
            <a href="/usuarios/login"><i class="far fa-user-circle"></i> Ingresa  </a>
            <% } %>
        </div>
    </div>
</header>
