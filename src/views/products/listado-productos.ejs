<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs')%>
        <link rel="stylesheet" href="/stylesheets/navbar.css">
        <link rel="stylesheet" href="/stylesheets/listado-productos.css">
        <title>Mi Cafe</title>
    </head>
    <body>
        <%- include('../partials/header.ejs')%>
        <main>
            <section class="tarjeta-producto">
                <% if(locals.user && locals.user.role_id == 1) { %> 
                <div class="button-section">
                    <a class="button-create" href="/productos/crear">Crear</a>
                </div>
                <% } %> 

                <h3>Caf√©s</h3>
                <div class="categoria cafes">
                    <% productos.forEach(producto =>{ %>
                    <article class="caja-producto">
                        <a href="/productos/<%= producto.id %>/detalle">
                            <img src="/images/products/<%= producto.image %>" alt="recomendacion">
                        </a>
                        <div class="producto-info">
                            <i class="fas fa-credit-card"></i>
                            <i class="fas fa-shopping-bag"></i>
                            <h2 class="precio-producto">$<%= producto.price %> </h2>
                            <h3><%= producto.name %> </h3>
                        </div>                
                    </article>
                    <% }) %>
                </div>

